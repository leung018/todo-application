{
  "name": "backend",
  "packageManager": "yarn@4.0.2",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon -e ts --watch src --exec \"ts-node src/index.ts\"",
    "ts:check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "integration-test": "jest --testMatch \"**/*.integration.ts\""
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6",
    "@types/uuid": "^9",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "postgres": "^3.4.3",
    "uuid": "^9.0.1"
  }
}
